<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_business_message" model="ir.ui.view">
        <field name="name">Business.message</field>
        <field name="model">business.message</field>
        <field name="arch" type="xml">
            <form string="Business Message">
                <field name='message' readonly="1" />
                <footer>
                    <button name="process" string="Process" type="object" class="oe_highlight"/>
                    <button string="_Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
